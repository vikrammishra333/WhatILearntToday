<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= field_set_tag 'Forgot your password?' do %>

    <div class="control-group">
      <%= f.label :email, "Email:", class: "control-label" %>

      <div class="controls">
        <%= f.email_field :email, autofocus: true, class: "input-xlarge" %>
        <div class="inline-field-error">
          <%= resource.errors.messages[:email].join(',') %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>

  <% end %>
<% end %>

<%= render "devise/shared/links" %>
